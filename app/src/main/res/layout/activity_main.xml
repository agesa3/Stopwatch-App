<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_splash"
        android:layout_width="380dp"
        android:layout_height="390dp"
        android:layout_marginStart="31dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icget"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/mregular"
        android:text="@string/healthy_on_you"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_splash" />

    <TextView
        android:id="@+id/txt_sub_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/mlight"
        android:lineSpacingExtra="8dp"
        android:text="@string/sub_text"
        android:textAlignment="center"
        android:textColor="@color/tint_white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_splash"
        app:layout_constraintStart_toStartOf="@+id/txt_splash"
        app:layout_constraintTop_toBottomOf="@+id/txt_splash" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/round_btn"
        android:fontFamily="@font/mmedium"
        android:text="@string/get_started"
        android:backgroundTint="@color/tint_green"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_sub_splash"
        app:layout_constraintStart_toStartOf="@+id/txt_sub_splash"
        app:layout_constraintTop_toBottomOf="@+id/txt_sub_splash" />


</androidx.constraintlayout.widget.ConstraintLayout>